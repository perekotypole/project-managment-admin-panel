{
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "plugins": ["import", "react"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"],
      "babelrc": false,
      "configFile": false
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["*.jsx", "*.js"]
    }
  ],
  "rules": {
    "react/prop-types": 0,
    "no-console": 0,
    "import/extensions": 0
  }
}
